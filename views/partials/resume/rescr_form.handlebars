<form class="rescr__form">
  <p class="rescr__form__title form__title x-large-font">
    Создание резюме
  </p>

  <p class="rescr__form__step__title">
    {{{lookup steps (sub page 1)}}}(шаг {{page}}/{{steps.length}})
  </p>

  {{> (concat 'res_form_' page) (object errors=errors data=data page_data=page_data) }}
  
  <div class="form__actions rescr__form__actions_{{page}}">
    {{#iff page '>' 1}}
    {{> link-btn (object text="Назад"
    class="js-rescr-back link-btn_transp-box-blue link-btn_pd-med link-btn_bd-rad-sm")}}
    {{/iff}}
    <button type="submit" class="{{#iff page '==' steps.length}} js-rescr-submit {{else}} js-rescr-save-continue {{/iff}} link-btn link-btn_blue link-btn_pd-med link-btn_bd-rad-sm">
      <span class="link-btn__text">
        {{#iff page '==' steps.length}}
        Создать резюме
        {{else}}
        Сохранить и продолжить
        {{/iff}}
      </span>
    </button>
  </div>
</form>
