{{#each (array
 (object title="Введите ваши навыки (через ';')" name="skills" placeholder="Навыки")
)}}

{{> components/input (object obj=this
  class=(object
  title="res__form__input__title"
  input="res__form__input forms-placeholder"
  block="res__form__field"
  )
  name=this.name
  value=(arraytostr (lookup ../data this.name))
  error=(lookup ../errors this.name))}}

{{/each}}

{{#each (array
(object 
name="description"
placeholder="Расскажите о своих качествах, знаниях, увлечениях, которые , как вам кажется, будут полезны работодателю"
title="Расскажите немного о себе (ваше хобби, личные качества, любая дополнительная информация)")
)}}

{{> components/input_textarea (object obj=this
rows=15
class=(object
block="res__form__field"
title="res__form__input__title"
input="res__form__input forms-placeholder"
)
error=(lookup ../errors this.name)
value=(lookup ../data this.name)
)}}
{{/each}}
