<div class="vacancies">
  <div class="vacancies__main-text">
    Мои вакансии
  </div>
  <div class="vacancies__block">
    <div class="vacancies__main-blocks">
      {{#each data}}
      <div class="vacancie">
        <div class="vacancie__main-info">
          {{this.name}}
        </div>
        <div class="vacancie__additional-info">
          <div class="add-info">
            <img class="add-info__img" src="../../../../../public/images/img/rouble_outline_20.png">
            <div class="add-info__text">{{#if this.salary_lower_bound and this.salary_upper_bound}}от {{this.salary_lower_bound}} до {{this.salary_upper_bound}} тыс. рублей
              {{else if this.salary_lower_bound}}от {{this.salary_lower_bound}} тыс. рублей
              {{else if this.salary_upper_bound}}до {{this.salary_upper_bound}} тыс. рублей
              {{else}}
              Не указана
              {{/if}}</div>
          </div>
          <div class="add-info">
            <img class="add-info__img" src="../../../../../public/images/img/stars_20.png">
            <div class="add-info__text">{{#if this.salary_lower_bound}}{{this.salary_lower_bound}}{{else}}Не указана{{/if}}</div>
          </div>
          <div class="add-info">
            <img class="add-info__img" src="../../../../../public/images/img/clock_outline_20.png">
            <div class="add-info__text">Полная занятость</div>
          </div>
          <div class="add-info">
            <img class="add-info__img" src="../../../../../public/images/img/location_map_outline_20.png">
            <div class="add-info__text">Москва</div>
          </div>
          <div class="add-info">
            <img class="add-info__img" src="../../../../../public/images/img/calendar_check_outline_20.png">
            <div class="add-info__text">2 дня</div>
          </div>
        </div>
        <div
          class="link-btn primary-btn link-btn-bd-rad-10 link-btn_transp-box-blue resume__btns-text resume__btns-text--secondary">
          Посмотреть подробную информацию
        </div>
      </div>
      {{/each}}
    </div>
    <div class="vacancie__form-create">
      <div
        class="link-btn primary-btn link-btn-bd-rad-10 primary-btn_blue-primary resume__btns-text resume__btns-text--primary">
        Создать вакансию
      </div>
    </div>
  </div>
</div>
