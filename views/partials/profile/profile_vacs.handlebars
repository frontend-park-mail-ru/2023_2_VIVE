<div class="vacancies">
  <div class="header-text header-text--first">
    Мои вакансии
  </div>
  <div class="vacancies__block">
    <div class="vacancies__main-blocks">
      {{#each data}}
      <div class="vacancie">
        <div class="header-text header-text--first text-dark-title">
          {{this.name}}
        </div>
        <div class="vacancie__additional-info">
          <div class="add-info">
            <img class="add-info__img" src="../../../../public/images/img/rouble_outline_20.png">
            <div class="common-text common-text--medium text-dark-regular">{{#if this.salary_lower_bound}}{{this.salary_lower_bound}}{{else}}Не указана{{/if}}</div>
          </div>
          <div class="add-info">
            <img class="add-info__img" src="../../../../../public/images/img/stars_20.png">
            <div class="common-text common-text--medium text-dark-regular">{{#if this.experience_lower_bound}}{{this.experience_lower_bound}}{{else}}Не указана{{/if}}</div>
          </div>
          <div class="add-info">
            <img class="add-info__img" src="../../../../../public/images/img/clock_outline_20.png">
            <div class="common-text common-text--medium text-dark-regular">Полная занятость</div>
          </div>
          <div class="add-info">
            <img class="add-info__img" src="../../../../../public/images/img/location_map_outline_20.png">
            <div class="common-text common-text--medium text-dark-regular">Москва</div>
          </div>
          <div class="add-info">
            <img class="add-info__img" src="../../../../../public/images/img/calendar_check_outline_20.png">
            <div class="common-text common-text--medium text-dark-regular">2 дня</div>
          </div>
        </div>
        <div
          class="text-dodger-blue setting-inpute__button common-text common-text--medium" 
          vacancy-id="{{this.id}} ">
          Посмотреть подробную информацию
        </div>
      </div>
      {{/each}}
    </div>
    <div class="vacancie__form-create">
      <div class="text-light-title setting-inpute__button setting-inpute__button--primary common-text common-text--medium">
          Создать вакансию
      </div>
    </div>
  </div>
</div>
