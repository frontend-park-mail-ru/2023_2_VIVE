<div class="vacancie {{#if data}}d-none{{/if}}">
    <div class="header-text header-text--first text-dark-title">
        {{vacancy.name}}
    </div>
    <div class="vacancie__additional-info">
        <div class="add-info add-info-vacancy-salary">
            <img class="add-info__img" src="images/img/rouble_outline_20.png">
            <div class="tooltip">
                <div class="vacancy-add-info-text common-text common-text--medium text-dark-regular" name="vacancy-salary">
                    {{vacancy.salary_view}}
                </div>
                <span class="tooltip-text-down tooltip-text-down__vacancy">Зарплата: {{vacancy.salary_view}}</span>
            </div>
        </div>
        <div class="add-info add-info-vacancy">
            <img class="add-info__img" src="images/img/stars_20.png">
            <div class="tooltip">
                <div class="vacancy-add-info-text common-text common-text--medium text-dark-regular" name="vacancy-experience">
                    {{vacancy.experience_view}}
                </div>
                <span class="tooltip-text-down tooltip-text-down__vacancy">Требуемый опыт:
                    {{vacancy.experience_view}}</span>
            </div>
        </div>
        <div class="add-info add-info-vacancy">
            <img class="add-info__img" src="images/img/clock_outline_20.png">
            <div class="tooltip">
                <div class="vacancy-add-info-text common-text common-text--medium text-dark-regular" name="vacancy-employment">
                    {{vacancy.employment_view}}
                </div>
                <span class="tooltip-text-down tooltip-text-down__vacancy">Занятость:
                    {{vacancy.employment_view}}</span>
            </div>
        </div>
        <div class="add-info add-info-vacancy">
            <img class="add-info__img" src="images/img/location_map_outline_20.png">
            <div class="tooltip">
                <div class="vacancy-add-info-text common-text common-text--medium text-dark-regular" name="vacancy-location">
                    {{vacancy.location}}
                </div>
                <span class="tooltip-text-down tooltip-text-down__vacancy">Расположение:
                    {{vacancy.location}}</span>
            </div>
        </div>
        <div class="add-info add-info-vacancy">
            <img class="add-info__img" src="images/img/calendar_check_outline_20.png">
            <div class="common-text common-text--medium text-dark-regular">2 дня</div>
        </div>
    </div>
        {{#iff user.role '==' 'employer'}}
        {{#iff user.employer_id '==' vacancy.employer_id}}
            <div class="vacancie__btns">
                <div class="text-dodger-blue setting-inpute__button common-text common-text--medium"
                data-name="refactoring">
                    <div class="vacancie__btns_desktop">
                        Редактировать
                    </div>
                    <div class="vacancie__btns_mobile">
                        <svg class="setting-input__mobile-btn" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
                            <path d="M3.88888 17.5C3.51388 17.5 3.18865 17.3623 2.91319 17.0868C2.63773 16.8114 2.5 16.4861 2.5 16.1111V3.88888C2.5 3.51388 2.63773 3.18865 2.91319 2.91319C3.18865 2.63773 3.51388 2.5 3.88888 2.5H11.9931L10.6042 3.88888H3.88888V16.1111H16.1111V9.34721L17.5 7.95831V16.1111C17.5 16.4861 17.3623 16.8114 17.0868 17.0868C16.8114 17.3623 16.4861 17.5 16.1111 17.5H3.88888ZM7.5 12.5V8.95833L15.3542 1.10417C15.4931 0.965279 15.6481 0.863425 15.8194 0.798606C15.9907 0.7338 16.162 0.701397 16.3333 0.701397C16.5093 0.701397 16.6832 0.736119 16.8551 0.805564C17.027 0.874994 17.1841 0.979154 17.3264 1.11804L18.8681 2.68056C18.9987 2.81906 19.0996 2.97199 19.1709 3.13933C19.2421 3.30668 19.2778 3.47692 19.2778 3.65004C19.2778 3.82317 19.2442 3.99654 19.1771 4.17015C19.11 4.34374 19.007 4.49999 18.8681 4.63888L11.0417 12.5H7.5ZM8.88888 11.1111H10.4583L15.5834 5.98611L14.7917 5.20833L13.9931 4.43054L8.88888 9.52083V11.1111Z" fill="#0496FF"/>
                        </svg>
                    </div>
                </div>
                <div class="link-btn link-btn_blue-without-bd  common-text common-text--medium {{#iff state '==' 'responses'}}d-none{{/iff}}" data-name="responses">
                    Смотреть отклики
                </div>
                <div class="link-btn link-btn_blue-without-bd common-text common-text--medium {{#iff state '==' 'description'}}d-none{{/iff}}" data-name="description">
                    Смотреть описание
                </div>
                <div class="setting__delete-btn" data-name="delete-vacancy">
                    <div class="common-text common-text--medium">
                        Удалить вакансию
                    </div>
                </div>
            </div>
        {{/iff}}
        {{else}}
            <div class="vacancie__btns">
                <a href="/vacancy/{{vacancy.id}}/response" class="js-nav-link text-light-title link-btn-blue--bg common-text common-text--medium">
                    Откликнуться
                </a>
                <div class="text-dodger-blue setting-inpute__button common-text common-text--medium cursor-not-allowed">
                    <img class="add-info__img" src="images/img/heart_settings_outline_20-01.png">
                </div>
                <div class="text-dodger-blue setting-inpute__button common-text common-text--medium cursor-not-allowed">
                    <img class="add-info__img" src="images/img/hide_outline_20-01.png">
                </div>
            </div>
        {{/iff}}
</div>