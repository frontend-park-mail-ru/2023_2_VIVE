<div class="vacancie {{#if data}}d-none{{/if}}">
    <div class="header-text header-text--first text-dark-title">
        {{vacancy.name}}
    </div>
    <div class="vacancie__additional-info">
        <div class="add-info">
            <img class="add-info__img" src="../../../../public/images/img/rouble_outline_20.png">
            <div class="common-text common-text--medium text-dark-regular" name="vacancy-salary">
                {{vacancy.salary_view}}
            </div>
        </div>
        <div class="add-info">
            <img class="add-info__img" src="../../../../../public/images/img/stars_20.png">
            <div class="common-text common-text--medium text-dark-regular" name="vacancy-experience">
                {{vacancy.experience_view}}
            </div>
        </div>
        <div class="add-info">
            <img class="add-info__img" src="../../../../../public/images/img/clock_outline_20.png">
            <div class="common-text common-text--medium text-dark-regular" name="vacancy-employment">
                {{vacancy.employment_view}}
            </div>
        </div>
        <div class="add-info">
            <img class="add-info__img" src="../../../../../public/images/img/location_map_outline_20.png">
            <div class="common-text common-text--medium text-dark-regular" name="vacancy-location">
                {{vacancy.location}}
            </div>
        </div>
        <div class="add-info">
            <img class="add-info__img" src="../../../../../public/images/img/calendar_check_outline_20.png">
            <div class="common-text common-text--medium text-dark-regular">2 дня</div>
        </div>
    </div>
        {{#iff user.role '==' 'employer'}}
        {{#iff user.employer_id '==' vacancy.employer_id}}
            <div class="vacancie__btns">
                <div class="text-dodger-blue setting-inpute__button common-text common-text--medium"
                data-name="refactoring">
                    Редактировать
                </div>
                <div class="link-btn link-btn_blue-without-bd  common-text common-text--medium {{#iff state '==' 'responses'}}d-none{{/iff}}" data-name="responses">
                    Просмотреть отклики
                </div>
                <div class="link-btn link-btn_blue-without-bd common-text common-text--medium {{#iff state '==' 'description'}}d-none{{/iff}}" data-name="description">
                    Просмотреть описание
                </div>
                <div class="setting__delete-btn" data-name="delete-vacancy">
                    <div class="common-text common-text--medium">
                        Удалить вакансию
                    </div>
                </div>
            </div>
        {{/iff}}
        {{else}}
            <div class="vacancie__btns">
                <a href="/vacancy/{{vacancy.id}}/response" class="js-nav-link text-light-title link-btn-blue--bg common-text common-text--medium">
                    Откликнуться
                </a>
                <div class="text-dodger-blue link-btn-blue common-text common-text--medium cursor-not-allowed">
                    Задать вопрос
                </div>
                <div class="text-dodger-blue setting-inpute__button common-text common-text--medium cursor-not-allowed">
                    <img class="add-info__img" src="../../../public/images/img/heart_settings_outline_20-01.png">
                </div>
                <div class="text-dodger-blue setting-inpute__button common-text common-text--medium cursor-not-allowed">
                    <img class="add-info__img" src="../../../public/images/img/hide_outline_20-01.png">
                </div>
            </div>
        {{/iff}}
</div>