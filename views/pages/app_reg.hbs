<form class="reg-form" action="">
  <span class="default-text x-large-font">Регистрация</span>
  <div class="d-flex">
    <span class="reg-text me-10">Найти работу</span>
    <a href="/templates/employer_reg.html" class="elipse-button">
      <div class="circle"></div>
    </a>
    <span class="reg-text ms-10">Найти сотрудников</span>
  </div>
  <div class="input">
    <input type="text" class="input-in" name="name" placeholder="Имя">
  </div>
  <div class="input">
    <input type="text" class="input-in" name="surname" placeholder="Фамилия">
  </div>
  <div class="input">
    <input type="text" class="input-in" name="email" placeholder="Электронная почта">
  </div>
  <div class="input">
    <input type="password" class="input-in" name="password" placeholder="Придумайте пароль">
  </div>
  <div class="input">
    <input type="password" class="input-in" name="repeat_password" placeholder="Повторите пароль">
  </div>
  <label for="rememberPassword" class="remember-label">
    <input type="checkbox" id="rememberPassword" class="remember-checkbox"> <span class="reg-text small-font">Запомнить
      пароль</span>
  </label>
  <div class="form-actions">
    <button type="submit" class="fully-button side-m-0">Зарегистрироваться</button>
    <a href="/templates/applicant_sign_in.html" class="transparent-button side-m-0">Уже есть аккаунт</a>
  </div>
</form>
