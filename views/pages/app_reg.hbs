<div class="column-wrapper">
  <div class="form-block">
    <form class="reg-form">
      <span class="default-text x-large-font">Регистрация</span>
      <div class="d-flex">
        <span class="reg-text me-10">Найти работу</span>
        <a href="/emp_reg" class="elipse-button">
          <div class="circle"></div>
        </a>
        <span class="reg-text ms-10">Найти сотрудников</span>
      </div>
      <label class="input">
        <input type="text" class="input-in" name="first_name" placeholder="Имя">
      </label>
      <label class="input">
        <input type="text" class="input-in" name="last_name" placeholder="Фамилия">
      </label>
      <label class="input">
        <input type="text" class="input-in" name="email" placeholder="Электронная почта">
      </label>
      <label class="input">
        <input type="password" class="input-in" name="password" placeholder="Придумайте пароль">
      </label>
      <label class="input">
        <input type="password" class="input-in" name="repeat_password" placeholder="Повторите пароль">
      </label>
      <label for="rememberPassword" class="remember-label">
        <input type="checkbox" name="remember_password" class="remember-checkbox"> <span
          class="reg-text small-font">Запомнить
          пароль</span>
      </label>
      <div class="form-actions">
        <button type="submit" class="fully-button side-m-0">Зарегистрироваться</button>
        <a href="#" class="transparent-button side-m-0">Уже есть аккаунт</a>
      </div>
    </form>
  </div>
</div>
