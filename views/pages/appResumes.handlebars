<div class="profile">
    <div class="profile__header profile__header--background--default-hh">
        
        <img class="profile_image" src="/images/webp/profile.webp" alt="profile-logo">
        <div class="profile__info">
            <div class="profile__main-info">
                <div class="profile__about">
                    <div class="header-text header-text--first text-light-title profile__about-mobile-main-text">{{user.first_name}} {{user.last_name}}</div>
                    <div class="secondary-text text-light-regular profile__about-mobile-main-text">Соискатель: {{user.email}}</div>
                </div>
            </div>
        </div>
        <div class="profile__filled-container">
            <div class="profile__role-big-frame">
                <div class="profile__roles-frame">
                    <div class="tooltip">
                        <img src="/images/svg/profile_28-01.svg" class="profile__role-img">
                        <span class="tooltip-text-down tooltip-text-down__profile common-text common-text-medium text-dark-title">Соискатель</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="emp-vacs__frame">
        <div class="header-text header-text--first">
            Найдено {{cvs.length}} резюме соискателя
        </div>
        {{> resume/resumes-list-mobile}}
    </div>
</div>
