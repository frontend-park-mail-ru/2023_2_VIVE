<section class="resv-section">
  <div class="column-wrapper">
    <div class="resv">
      <div class="resv__nav">
        {{> link-btn text="Назад к списку резюме" href="/profile/resumes"
        class="resv__nav__link js-nav-link link-btn_transp"
        class_text = "text-dodger-blue"
        svg_pos="before"
        svg='<svg class="resv__nav__link__svg" xmlns="http://www.w3.org/2000/svg" width="16" height="16"
          viewBox="0 0 16 16" fill="none">
