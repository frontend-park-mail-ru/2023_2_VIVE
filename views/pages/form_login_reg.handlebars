<div class="column-wrapper">
  <div class="form-block">
    <form class="form">
      <span class="form__title text header-text header-text--first text-dark-title">
        {{#iff form_type '==' 'login'}}
        Войти
        {{else}}
        Регистрация
        {{/iff}}
      </span>
      <div class="d-flex">
        <span class="me-10 common-text common-text--regular {{#iff role '==' 'emp'}}text-dark-regular{{else}}text-dark-title{{/iff}}">Найти работу</span>
        <a class="form__slider {{#iff role '==' 'emp'}} form__slider_right {{/iff}} js-link" href="
        {{#iff form_type '==' 'reg'}} 
        {{#iff role '==' 'app'}} 
        /emp_reg
        {{else}} 
        /app_reg
        {{/iff}} 
        {{else}}   
        {{#iff role '==' 'app'}} 
        /emp_login
        {{else}} 
        /app_login
        {{/iff}}  
        {{/iff}}
        ">
          <div class="form__slider__circle"></div>
        </a>
        <span class="ms-10 common-text common-text--regular {{#iff role '==' 'app'}}text-dark-regular{{else}}text-dark-title{{/iff}}">Найти сотрудников</span>
      </div>

      <div class="form__error d-none"></div>

      {{#each inputs}}
      {{> input (object obj=this class="form__input-txt common-text common-text--medium")}}
      {{/each}}

      <label class="form__input-remember" for="remember">
        {{> input_checkbox (object name="remember")}}
        <span>Запомнить пароль</span>
      </label>
      <div class="form__actions">
        <button type="submit" class="link-btn-blue--bg common-text common-text--medium text-light-title">
          <span class="link-btn__text">{{#iff form_type '==' 'login' }}
            Войти
            {{else}}
            Зарегистрироваться
            {{/iff}}
          </span>
        </button>
        <a class="js-link link-btn-blue text-dodger-blue"
          href="
        {{#iff role '==' 'app'}} 
        {{#iff form_type '==' 'reg'}} 
        /app_login
        {{else}} 
        /app_reg
        {{/iff}} 
        {{else}}   
        {{#iff form_type '==' 'reg'}} 
        /emp_login
        {{else}} 
        /emp_reg
        {{/iff}}  
        {{/iff}}
        ">
          <span class="link-btn__text">
            {{#iff form_type '==' 'login' }}
            Создать аккаунт
            {{else}}
            Уже есть аккаунт
            {{/iff}}
          </span>
        </a>
      </div>
    </form>
  </div>
</div>
