<div class="profile">
    <div class="d-flex profile__header profile__header--background--default-hh">
        <img class="profile_image" src="../../../public/images/img/buttersss.jpg" alt="profile-logo">
        <div class="profile__info">
            <div class="profile__main-info">
                <div class="profile__about">
                    <div class="profile__main-text">{{ user.last_name }} {{ user.first_name }} {{ user.third_name }}</div>
                    <div class="profile__primary-text">{{ user.email }}</div>
                </div>
                <div class="profile__switch-btns">
                    <div class="profile__btn {{#iff state '==' 'settings'}}profile__btn--active{{else}}profile__btn--hover{{/iff}}" data-name="settings">
                        <div class="profile__btn-text">Настройки</div>
                        <div class="profile__line"></div>
                    </div>
                    <div class="profile__btn {{#iff state '==' 'vacancies'}}profile__btn--active{{else}}profile__btn--hover{{/iff}}" data-name="vacancies">
                        <div class="profile__btn-text">Вакансии</div>
                        <div class="profile__line"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    {{#iff state '==' 'settings'}}
    {{> profile_emp_settings}}
    {{else iff state '==' 'vacancies'}}
    {{> profile_emp_vacs}}
    {{else}}
    {{> profile_emp_settings}}
    {{/iff}}

</div>
