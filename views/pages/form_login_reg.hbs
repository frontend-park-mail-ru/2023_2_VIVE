<div class="column-wrapper">
  <div class="form-block">
    <form class="reg-form">
      <span class="default-text x-large-font">
        {{#iff form_type 'login'}}
        Войти
        {{else}}
        Регистрация
        {{/iff}}
      </span>
      <div id="toggler" class="d-flex">
        <span class="reg-text me-10">Найти работу</span>
        <a href="
        {{#iff form_type 'reg'}} 
        {{#iff role 'app'}} 
        /emp_reg
        {{else}} 
        /app_reg
        {{/iff}} 
        {{else}}   
        {{#iff role 'app'}} 
        /emp_login
        {{else}} 
        /app_login
        {{/iff}}  
        {{/iff}}
        " class="elipse-button {{#iff role 'emp'}} elipse-button-right {{/iff}}">
          <div class="circle"></div>
        </a>
        <span class="reg-text ms-10">Найти сотрудников</span>
      </div>

      {{#each inputs}}
      <label class="input">
        <input type="{{ this.type }}" class="input-in" name="{{ this.name }}" placeholder="{{ this.placeholder }}">
      </label>
      {{/each}}

      <label for="remember_password" class="remember-label">
        <input type="checkbox" name="remember_password" id="remember_password">
        <div class="custom-checkbox">
          <svg width="18" height="13" viewBox="0 0 18 13" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path
              d="M6.5501 12.5L0.850098 6.79998L2.2751 5.37498L6.5501 9.64998L15.7251 0.474976L17.1501 1.89998L6.5501 12.5Z"
              fill="#E4FDE1" />
          </svg>
        </div>
        <span>Запомнить пароль</span>
      </label>
      <div class="form-actions">
        <button type="submit" class="fully-button side-m-0">
          {{#iff form_type 'login' }}
          Войти
          {{else}}
          Зарегистрироваться
          {{/iff}}
        </button>
        <a href="
        {{#iff role 'app'}} 
        {{#iff form_type 'reg'}} 
        /app_login
        {{else}} 
        /app_reg
        {{/iff}} 
        {{else}}   
        {{#iff form_type 'reg'}} 
        /emp_login
        {{else}} 
        /emp_reg
        {{/iff}}  
        {{/iff}}
        " class="form-type-switch-link transparent-button side-m-0">
          {{#iff form_type 'login' }}
          Зарегистрироваться
          {{else}}
          Уже есть аккаунт
          {{/iff}}
        </a>
      </div>
    </form>
  </div>
</div>
