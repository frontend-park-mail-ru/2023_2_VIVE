<div class="view">
    <div>
        <div class="link-btn complex-btn link-btn_blue-without-bd">
            <img class="view__btn-arrow" src="../../../public/images/img/arrow_left_outline_20-01.png">
            <div class="view__btn-text">
                Назад к вакансиям
            </div>
        </div>
        <div class="view__field">
            <div class="view__main">
                {{> vac_refactoring}}
                <div class="vacancie">
                    <div class="vacancie__main-info">
                        Младший Go разработчик в VK
                    </div>
                    <div class="vacancie__additional-info">
                        <div class="add-info">
                            <img class="add-info__img" src="../../../public/images/img/rouble_outline_20.png">
                            <div class="add-info__text">90 тыс. рублей</div>
                        </div>
                        <div class="add-info">
                            <img class="add-info__img" src="../../../public/images/img/stars_20.png">
                            <div class="add-info__text">Нет опыта</div>
                        </div>
                        <div class="add-info">
                            <img class="add-info__img" src="../../../public/images/img/clock_outline_20.png">
                            <div class="add-info__text">Полная занятость</div>
                        </div>
                        <div class="add-info">
                            <img class="add-info__img" src="../../../public/images/img/location_map_outline_20.png">
                            <div class="add-info__text">Москва</div>
                        </div>
                        <div class="add-info">
                            <img class="add-info__img" src="../../../public/images/img/calendar_check_outline_20.png">
                            <div class="add-info__text">1 неделя</div>
                        </div>
                    </div>
                    <div class="vacancie__btns">
                        <div class="link-btn primary-btn link-btn-bd-rad-10 link-btn_transp-box-blue resume__btns-text resume__btns-text--secondary"
                        data-name="refactor-main">
                            Редактировать
                        </div>
                        <div class="link-btn link-btn_blue-without-bd {{#iff state '==' 'responses'}}d-none{{/iff}}" data-name="responses">
                            Просмотреть отклики
                        </div>
                        <div class="link-btn link-btn_blue-without-bd {{#iff state '==' 'description'}}d-none{{/iff}}" data-name="description">
                            Просмотреть описание
                        </div>
                    </div>
                </div>
                {{#iff state '==' 'description'}}
                {{> vac_description}}
                {{else iff state '==' 'responses'}}
                {{> vac_responses}}
                {{/iff}}
            </div>
            <div class="view-company">
                <img class="view-company__img" src="../../../public/images/img/vk-company.png">
                <div class="view-company__main-info">
                    <div class="view-company__name">
                        VK
                    </div>
                    <div class="view-company__location">
                        <img class="view-company__location-img" src="../../../public/images/img/location_map_outline_20.png">
                        <div class="view-company__location-text">
                            Москва
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>