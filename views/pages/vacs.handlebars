<section class="vacs-section">
  <div class="column-wrapper">
    <div class="vacs">
      {{> vacs_filters }}
      <div class="vacs__block">
        <div class="vacs__block__params">
          <div class="vacs__block__params__sorted">
            <button class="vacs__block__params__sorted__btn">По дате
              <svg width="12" height="8" viewBox="0 0 12 8" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M6 7.4L0 1.4L1.4 0L6 4.6L10.6 0L12 1.4L6 7.4Z" fill="#0496FF" />
              </svg>
            </button>
          </div>
          <div class="vacs__block__params__view">
            {{> link-btn (object
            class="vacs__block__params__view__left link-btn_blue link-btn_pd-med d-block"
            svg='<svg width="20" height="16" viewBox="0 0 20 16" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path
                d="M7 14H18V11.325H7V14ZM2 4.675H5V2H2V4.675ZM2 9.35H5V6.675H2V9.35ZM2 14H5V11.325H2V14ZM7 9.35H18V6.675H7V9.35ZM7 4.675H18V2H7V4.675ZM2 16C1.45 16 0.979167 15.8042 0.5875 15.4125C0.195833 15.0208 0 14.55 0 14V2C0 1.45 0.195833 0.979167 0.5875 0.5875C0.979167 0.195833 1.45 0 2 0H18C18.55 0 19.0208 0.195833 19.4125 0.5875C19.8042 0.979167 20 1.45 20 2V14C20 14.55 19.8042 15.0208 19.4125 15.4125C19.0208 15.8042 18.55 16 18 16H2Z"
                fill="#E4FDE1" />
            </svg>'
            )}}
            {{> link-btn (object
            class="vacs__block__params__view__right link-btn_transp-box-blue link-btn_pd-med d-block"
            svg='<svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path
                d="M0 8V0H8V8H0ZM0 18V10H8V18H0ZM10 8V0H18V8H10ZM10 18V10H18V18H10ZM2 6H6V2H2V6ZM12 6H16V2H12V6ZM12 16H16V12H12V16ZM2 16H6V12H2V16Z"
                fill="#0496FF" />
            </svg>'
            )}}
          </div>
        </div>
        <ul class="vacs__list">
          {{#each data}}
          <li class="vacs__list__item">
            <div class="vacs__list__item__desc__main">
              <div class="vacs__list__item__company-logo">
                <a class="js-nav-link" href="/vacancy/{{this.id}}"><img src="../../public/images/Logo 1.png" alt=""></a>
              </div>
              <div>
                <h3 class="vacs__list__item__company-name">{{this.company_name}}</h3>
                <div class="vacancie__additional-info">
                    <div class="add-info">
                        <img class="add-info__img" src="../../../../public/images/img/rouble_outline_20.png">
                        <div class="common-text common-text--medium text-dark-regular">{{#if this.salary_lower_bound}}{{#if this.salary_upper_bound}}от {{this.salary_lower_bound}} до {{this.salary_upper_bound}} тыс. рублей{{else}}от {{this.salary_lower_bound}} тыс. рублей{{/if}}{{else if this.salary_upper_bound}}до {{this.salary_upper_bound}} тыс. рублей{{else}}Не указана{{/if}}</div>
                    </div>
                    <div class="add-info">
                        <img class="add-info__img" src="../../../../../public/images/img/stars_20.png">
                        <div class="common-text common-text--medium text-dark-regular">{{#if this.experience_lower_bound}}{{#if this.experience_upper_bound}}{{this.experience_lower_bound}}-{{this.experience_upper_bound}} года{{else}}{{this.salary_lower_bound}} года{{/if}}{{else if this.experience_upper_bound}}{{this.experience_upper_bound}} года{{else}}Не указана{{/if}}</div>
                    </div>
                    <div class="add-info">
                        <img class="add-info__img" src="../../../../../public/images/img/clock_outline_20.png">
                        <div class="common-text common-text--medium text-dark-regular">{{#iff this.employment '==' 'full-time'}}Полная занятость{{else}}Не указано{{/iff}}</div>
                    </div>
                    <div class="add-info">
                        <img class="add-info__img" src="../../../../../public/images/img/location_map_outline_20.png">
                        <div class="common-text common-text--medium text-dark-regular">{{#if this.location}}{{this.location}}{{else}}Не указано{{/if}}</div>
                    </div>
                    <div class="add-info">
                        <img class="add-info__img" src="../../../../../public/images/img/calendar_check_outline_20.png">
                        <div class="common-text common-text--medium text-dark-regular">2 дня</div>
                    </div>
                </div>
              </div>
            </div>
            <div class="vacs__list__item__desc__text">
              <h3 class="vacs__list__item__desc__name">
                {{> link-btn (object text=name
                class="vacs__list__item__desc__name__link link-btn_transp link-btn_semi-bold link-btn_block"
                class_text="x-large-font")}}
                {{!-- <a href="#">{{this.name}}</a> --}}
              </h3>
              <p class="vacs__list__item__desc__prev">
                {{this.description}}
              </p>
            </div>
            <div class="vacs__list__item__feed">
              <div class="vacs__list__item__feed__respond">
                {{> link-btn (object text="Откликнуться"
                class="vacs__list__item__feed__respond__btn common-text common-text--medium link-btn-blue--bg text-light-title"
                )}}
              </div>
              <div class="vacs__list__item__feed__fav">
                {{> link-btn (object
                class="vacs__list__item__feed__fav__btn link-btn-blue"
                svg='<svg width="22" height="18" viewBox="0 0 22 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path
                    d="M10 18L6.825 15.15C5.625 14.0667 4.59583 13.1 3.7375 12.25C2.87917 11.4 2.17083 10.6 1.6125 9.85C1.05417 9.1 0.645833 8.375 0.3875 7.675C0.129167 6.975 0 6.24167 0 5.475C0 3.90833 0.525 2.60417 1.575 1.5625C2.625 0.520833 3.93333 0 5.5 0C6.36667 0 7.19167 0.183333 7.975 0.55C8.75833 0.916667 9.43333 1.43333 10 2.1C10.5667 1.43333 11.2417 0.916667 12.025 0.55C12.8083 0.183333 13.6333 0 14.5 0C15.85 0 16.9833 0.379167 17.9 1.1375C18.8167 1.89583 19.4417 2.85 19.775 4H17.65C17.35 3.33333 16.9083 2.83333 16.325 2.5C15.7417 2.16667 15.1333 2 14.5 2C13.65 2 12.9167 2.22917 12.3 2.6875C11.6833 3.14583 11.1083 3.75 10.575 4.5H9.425C8.90833 3.75 8.32083 3.14583 7.6625 2.6875C7.00417 2.22917 6.28333 2 5.5 2C4.55 2 3.72917 2.32917 3.0375 2.9875C2.34583 3.64583 2 4.475 2 5.475C2 6.025 2.11667 6.58333 2.35 7.15C2.58333 7.71667 3 8.37083 3.6 9.1125C4.2 9.85417 5.01667 10.7208 6.05 11.7125C7.08333 12.7042 8.4 13.9 10 15.3C10.4333 14.9167 10.9417 14.475 11.525 13.975C12.1083 13.475 12.575 13.0583 12.925 12.725L14.35 14.15C13.9833 14.4833 13.5167 14.8958 12.95 15.3875C12.3833 15.8792 11.8833 16.3167 11.45 16.7L10 18ZM17 14V11H14V9H17V6H19V9H22V11H19V14H17Z"
                    fill="#0496FF" />
                </svg>
                ')}}
              </div>
            </div>
          </li>
          {{/each}}



        </ul>
      </div>
    </div>

  </div>
</section>
