<div class="csat-stat">
    <div class="header-text header-text--first text-dark-title">
        Статистика
    </div>
    {{#each data}}
    <div class="csat-stat__frames" id="{{@index}}">
        <div class="csat-stat__block">
            <div class="csat-stat__question header-text header-text--second text-dark-title">
                Вопрос: {{this.name}}
            </div>
            <div class="csat-stat__statistic">
                <div class="csat-stat__value">
                    <div class="common-text common-text--medium text-dark-title">
                        Средняя оценка -
                    </div>
                    <div class="common-text common-text--bold text-dark-title">
                        {{this.avg_star}}
                    </div>
                </div>
                <div class="csat-stat__value">
                    <div class="common-text common-text--medium text-dark-title">
                        5 звёзд -
                    </div>
                    <div class="common-text common-text--bold text-dark-title">
                        {{this.five_stars_count}}
                    </div>
                </div>
                <div class="csat-stat__value">
                    <div class="common-text common-text--medium text-dark-title">
                        4 звезды -
                    </div>
                    <div class="common-text common-text--bold text-dark-title">
                        {{this.four_stars_count}}
                    </div>
                </div>
                <div class="csat-stat__value">
                    <div class="common-text common-text--medium text-dark-title">
                        3 звезды -
                    </div>
                    <div class="common-text common-text--bold text-dark-title">
                        {{this.three_stars_count}}
                    </div>
                </div>
                <div class="csat-stat__value">
                    <div class="common-text common-text--medium text-dark-title">
                        2 звезды -
                    </div>
                    <div class="common-text common-text--bold text-dark-title">
                        {{this.two_stars_count}}
                    </div>
                </div>
                <div class="csat-stat__value">
                    <div class="common-text common-text--medium text-dark-title">
                        1 звезда -
                    </div>
                    <div class="common-text common-text--bold text-dark-title">
                        {{this.one_stars_count}}
                    </div>
                </div>
            </div>
            <div class="csat-stat__comments">
                {{#iff this.cur_iter_comment '==' '0'}}
                {{else}}
                <svg class="cursor-pointer" xmlns="http://www.w3.org/2000/svg" width="46" height="46" viewBox="0 0 46 46" fill="none">
                    <mask id="mask0_2163_15609" style="mask-type:alpha" maskUnits="userSpaceOnUse" x="0" y="0" width="46" height="46">
                        <rect x="0.5" y="0.5" width="45" height="45" fill="#D9D9D9"/>
                    </mask>
                    <g mask="url(#mask0_2163_15609)">
                        <path d="M21.125 34.25L9.875 23L21.125 11.75L23.75 14.375L15.1719 23L23.75 31.625L21.125 34.25ZM33.5 34.25L22.25 23L33.5 11.75L36.125 14.375L27.5469 23L36.125 31.625L33.5 34.25Z" fill="#1C1B1F"/>
                    </g>
                </svg>
                {{/iff}}
                <textarea class="csat-stat__textarea" disabled>{{this.comment}}</textarea>
                {{#if this.end_comments}}
                {{else}}
                <svg class="cursor-pointer" xmlns="http://www.w3.org/2000/svg" width="47" height="46" viewBox="0 0 47 46" fill="none">
                    <mask id="mask0_2163_15611" style="mask-type:alpha" maskUnits="userSpaceOnUse" x="0" y="0" width="47" height="46">
                        <rect x="0.5" width="46" height="46" fill="#D9D9D9"/>
                    </mask>
                    <g mask="url(#mask0_2163_15611)">
                        <path d="M18.8527 23L10.084 14.1833L12.7673 11.5L24.2673 23L12.7673 34.5L10.084 31.8167L18.8527 23ZM31.5027 23L22.734 14.1833L25.4173 11.5L36.9173 23L25.4173 34.5L22.734 31.8167L31.5027 23Z" fill="#1C1B1F"/>
                    </g>
                </svg>
                {{/if}}
            </div>
        </div>
    </div>
    {{/each}}
</div>